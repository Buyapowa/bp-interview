<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>
<%= link_to "New user", new_user_path %>

<div id="users">
  <% @users.each do |user| %>
    <div id="<%= dom_id user %>">
      <dl>
        <dt>User name:</dt>
        <dd><%= user.full_name %></dd>
      </dl>
    </div>
    <p>
      <%= link_to "Show this user", user %>
    </p>

  <hr />
  <% end %>
</div>
